<?xml version="1.0" encoding="UTF-8" ?>
<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN" "https://mybatis.org/dtd/mybatis-3-mapper.dtd">

<mapper namespace="team.project.module.manage_lin.internal.mapper.tbl_club_Mapper">

    <resultMap id="findbynamebetweendepartmentId" type="team.project.module.manage_lin.internal.model.entity.tbl_club_DO">
        <result property="deleted" column="is_deleted" />
        <result property="createTime" column="create_time" />
        <result property="updateTime" column="update_time" />
    </resultMap>


    <select id="findbyname" resultType="team.project.module.manage_lin.internal.model.entity.tbl_club_DO"
            parameterType="java.lang.String">
        select * from tbl_club where name = #{name}
    </select>

    <select id="findbynamebetweendepartmentId"
            resultType="team.project.module.manage_lin.internal.model.entity.tbl_club_DO">
        select * from tbl_club
        where name = #{name} and department_id = #{departmentId}
    </select>

    <update id="create_club">
        insert into tbl_club (name, state, department_id)
        values (#{name}, 0, #{departmentId})
    </update>

    <update id="delete_club">
        update tbl_club set is_deleted = 1 where name = #{name} and department_id = #{departmentId} and is_deleted = 0
    </update>
    <update id="reuse_club">
        update tbl_club set  state = 0 where name = #{name} and department_id = #{departmentId} and state = 1
    </update>
</mapper>
