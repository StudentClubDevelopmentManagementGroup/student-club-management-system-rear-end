<?xml version="1.0" encoding="UTF-8" ?>
<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN" "https://mybatis.org/dtd/mybatis-3-mapper.dtd">

<mapper namespace="team.project.module.club.duty.internal.mapper.TblDutyMapper">


    <insert id="createDuty">
        insert into tbl_user_club_duty (number,area,duty_time,arranger_id,cleaner_id,club_id,is_mixed)
        values (#{number},#{area},#{duty_time},#{arranger_id},#{cleaner_id},#{club_id},#{is_mixed})
    </insert>
    <delete id="deleteDuty">
        update tbl_user_club_duty set is_deleted = 1 from tbl_user_club_duty where  and duty_time = #{duty_time}
        and cleaner_id = #{cleaner_id} and club_id = #{club_id} and is_deleted = 0
    </delete>

    <select id="selectOne" resultType="team.project.module.club.duty.internal.model.entity.TblDuty">

    </select>
    <select id="selectLastWeek" resultType="team.project.module.club.duty.internal.model.entity.TblDuty"
            parameterType="java.lang.Long">

    </select>
</mapper>
